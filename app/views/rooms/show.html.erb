<h1>Room <%= @room.user.nickname %>_<%= @room.id %></h1>

<%= link_to "Leave", root_path %>
<% if current_user == @room.user %>
  <%= button_to "Delete room", room_path(@room), method: :delete,
                data: { confirm: "Are you sure you want to delete this room?" }, class: 'btn btn-danger mt-1 mb-1' %>
<% end %>

<p id="notice"><%= notice %></p>

<div class="messages">
  <div class="messages-inner" id="messages" data-room-id="<%= @room.id %>">
    <%= render @room.messages %>
  </div>
</div>

<%= render 'messages/form' %>
